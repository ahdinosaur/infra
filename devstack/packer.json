{
  "description": "Creates a development OpenStack machine image.",
  "variables": {
    "name": "devstack",
    "hostname": "devstack",
    "domain": "",
    "outputs_dir": "../.builds",
    "ssh_user": "vagrant",
    "ssh_password": "vagrant",
    "headless": "false"
  },
  "builders": [
    {
      "type": "virtualbox-ovf",
      "name": "virtualbox",
      "vm_name": "{{user `name`}}",
      "source_path": "../.builds/base_virtualbox/base.ovf",

      "ssh_username": "{{user `ssh_user`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "shutdown_command": "echo '{{user `ssh_user`}}' | sudo -S shutdown -P now",
      "output_directory": "{{user `outputs_dir`}}/{{user `name`}}_{{build_name}}/",

      "headless": "{{user `headless`}}"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "scripts",
      "destination": "/tmp/devstack-scripts"
    },
    {
      "type": "shell",
      "execute_command": "echo '{{user `ssh_password`}}' | {{.Vars}} sudo -E -S -u {{user `ssh_user`}} bash '{{.Path}}'",
      "inline": [
        "sh -x /tmp/devstack-scripts/stack.sh"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "only": ["virtualbox"],
      "keep_input_artifact": true,
      "compression_level": 0,
      "output": "{{user `outputs_dir`}}/{{user `name`}}_{{.BuildName}}.box"
    }
  ]
}
